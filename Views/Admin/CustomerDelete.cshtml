@model WebApplicationExcoticMandi.Models.Customer

@{
    ViewBag.Title = "CustomerDelete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CustomerDelete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUser.FullName)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUser.MobileNo)
        </dt>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "CustomerList")
        </div>
    }
</div>
